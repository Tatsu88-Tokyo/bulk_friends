<!DOCTYPE html>
<html>
  <head>
    <title>BulkFriends</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>
<header>
  <div class="header-logo">
    <%= link_to("Bulkfriends","/") %>
  </div>
  <ul class="header-menus">
    <li>
    <%= link_to("Bulkfriendsとは","/about") %>
    </li>
    <li>
    <%= link_to("Tweets","/posts") %>
    </li>
    <li>
    <%= link_to("新規投稿","/posts/new") %>
    </li>
    <li>
    <%= link_to("ユーザー一覧","/users") %>
    </li>
    <li>
    <%= link_to("ユーザー編集/新規登録", "/users/edit") %> 
    </li>
  </ul>
</header>
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
