<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name))do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:style=>"background-color:white;"  %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password",:style=>"background-color:white;"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
  
  <div class="signup">
  <%= link_to "新規登録", new_registration_path(resource_name),:style=>"color:black;" %>
  </div>
  
  <div class="password">
  <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name),:style=>"color:black;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
